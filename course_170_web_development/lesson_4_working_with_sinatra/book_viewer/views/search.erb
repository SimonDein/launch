<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>

<% if @query %>
  <% if @search_result %>
    <h2 class="content-subhead">Results for '<%= @query %>'</h2>
  
    <ul>
      <% @search_result.each do |result| %>
        <h4><%= result[:name] %></h4>
        <ul>
          <% result[:paragraphs].each do |paragraph_num, paragraph| %>
            <li><a href="/chapter/<%= result[:number] %>#<%= paragraph_num %>"><%= paragraph %></a></li>
          <% end %>
        </ul>
      <% end %>
    </ul>

  <% else %>
    <p>Sorry, we looked, but could not find anything on '<%= @query %>'</p>
  <% end %>
<% end %>