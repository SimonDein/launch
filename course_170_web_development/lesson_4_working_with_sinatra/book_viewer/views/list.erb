<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>This is a list - wow!</title>

    <link rel="stylesheet" href="stylesheets/pure-min.css">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/book_viewer.css">
</head>

<body>
  <ul>
  <% @files.each do |file| %>
    <li><a href="<%= file %>"><%= file %></a></li>
  <% end %>
  </ul>

  <ul>
    <li>
    <% if params[:sort] %>
      <a href="/">A - Z</a>
    <% else %>
      <a href="?sort=z%2Da">Z - A</a>
    <% end%>
    </li>
  </ul>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
